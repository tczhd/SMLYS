@using SMLYS.Web.ViewModels.Items


@model IEnumerable<ItemViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated fadeIn  view-item-content">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i> @ViewData["Title"]
                </div>
                <div class="card-body">
                    <div class="table-responsive-md text-nowrap">
                        <table class="table table-bordered table-striped table-sm table-items">
                            <thead>
                                <tr>
                                    <th>ITEM NAME</th>
                                    <th>SHORT CODE</th>
                                    <th>DESCRIPTION</th>
                                    <th>COST</th>
                                    <th>SUBSCRIPTION</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                <tr>
                                    <td>
                                        <a href="/Item/ItemForm?id=@item.ItemId">@Html.DisplayFor(modelItem => item.ItemName) </a>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.ShortCode)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Cost)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SubscriptionDisplay)</td>
                                </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
    <!--/.row-->



</div>


