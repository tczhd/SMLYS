@using SMLYS.Web.ViewModels.Items


@model IEnumerable<ItemViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated fadeIn  view-item-content">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i> @ViewData["Title"]
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped table-sm table-items">
                        <thead>
                            <tr>
                                <th>ITEM NAME</th>
                                <th>DESCRIPTION</th>
                                <th>COST</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ItemName) </td>
                                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Cost)</td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                    <nav>
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Prev</a></li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
    <!--/.row-->



</div>


