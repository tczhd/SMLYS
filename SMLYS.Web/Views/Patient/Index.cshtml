
@{
    //ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="animated fadeIn  view-patients-content">
    <img id="search-spinner" class="invisible" src='/images/loading.gif' width='30' height='30' />
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-edit"></i>Find Patients

                </div>
                <div class="card-body view-patients-search-section">
                    <form class="form-horizontal">
                        <div class="form-group">

                            <div class="row">
                                <div class="col-md-2 select-type">
                                        <select id="selectType" name="selectType" class="form-control">
                                            <option value="first_name" selected="selected">First Name</option>
                                            <option value="last_name">Last Name</option>
                                        </select>
                                </div>
                                <div class="col-md-8 filter-input">
                                    <input id="filterInput" class="form-control" size="16" type="text">
                                </div>
                                <div class="col-md-2 search-buttons">
                                    <button class="btn btn-info active add" type="button" id="add">Add</button>
                                    <button type="button" id="search" class="btn btn-secondary ml-1">Search </button>
                                </div>
                            </div>
                            @*<div class="controls">
                                    <div class="input-prepend input-group">



                                        <span class="input-group-btn">

                                        </span>
                                    </div>
                                </div>*@
                        </div>
                        <div class="form-group search-filters">
                        </div>

                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i> Patients
                </div>
                <div class="card-body">
                    <div class="table-responsive-md text-nowrap">
                        <table class="table table-bordered table-striped table-sm table-patients">
                            <thead>
                                <tr>
                                    <th>PATIENT</th>
                                    <th>ADDRESS</th>
                                    <th>PHONE</th>
                                    <th>EMAIL</th>
                                    <th>STATUS</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <nav id="footer-nav-pagination" class="table-responsive">
                        @*<ul class="pagination  justify-content-center d-flex flex-wrap">
                                <li class="page-item"><a class="page-link" href="#">Prev</a></li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">1</a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">4</a></li>
                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                            </ul>*@
                    </nav>
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
    <!--/.row-->



</div>
@section Styles {
    <link href="~/css/patient/patient.css" rel="stylesheet">
}


@section Scripts {
    <script src="~/js/views/Patients/SearchPatient.js" asp-append-version="true"></script>
}

