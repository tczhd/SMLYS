
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="animated fadeIn  view-patients-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-edit"></i>Find Patients

                </div>
                <div class="card-body view-patients-search-section">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <div class="controls">
                                <div class="input-prepend input-group">
                                    <span class="input-group-addon">
                                        <select id="selectType" name="selectType" class="form-control">
                                            <option value="first_name" selected="selected">First Name</option>
                                            <option value="last_name">Last Name</option>
                                        </select>

                                    </span>
                                    <input id="filterInput" class="form-control" size="16" type="text">

                                    <span class="input-group-btn">
                                        <button class="btn btn-secondary" type="button" id="add">Add</button>
                                        <button type="button" id="search" class="btn btn-secondary">Search </button>

                                        <img id="search-spinner" class="invisible" src='/images/loading.gif' width='30' height='30'></img>
                                        @*<button class="btn btn-secondary" type="button" id="search">Search</button>*@
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group search-filters">
                            @*<div class="search-filter float-sm-left">
                                <span class="search_type first_name">First Name: </span>
                                <span class="search_content first_name"  title="first_name">Izen</span>
                                <i class="fa fa-close fa-lg"></i>
                            </div>*@

                        </div>

                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i> Patients
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped table-sm table-patients">
                        <thead>
                            <tr>
                                <th>PATIENT</th>
                                <th>ADDRESS</th>
                                <th>PHONE</th>
                                <th>EMAIL</th>
                                <th>STATUS</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <nav>
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Prev</a></li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
    <!--/.row-->



</div>
@section Styles {
    <link href="~/css/patient/patient.css" rel="stylesheet">
}


@section Scripts {
    <script src="~/js/views/Patients/SearchPatient.js" asp-append-version="true"></script>
}

