@using SMLYS.Web.ViewModels.Invoices

@model InvoiceRequestViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated fadeIn  view-item-content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-edit"></i>Search Invoice
                </div>
                <form asp-controller="Invoice" method="post" class="form-horizontal" id="myForm" asp-action="SearchInvoice">
                    <div class="card-body view-invoice-search-section">

                        <div class="row">
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <input asp-for="InvoiceId" class="form-control" placeholder="Invoice Id" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <input asp-for="InvoiceFromDate" class="form-control" placeholder="Invoice From Date" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <input asp-for="InvoiceToDate" class="form-control" placeholder="Invoice To Date" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-sm btn-secondary">Search</button>
                    </div>

                </form>
            </div>
        </div>
        <!--/.col-->
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i> Invoice
                </div>
                <div class="card-body">
                    <div class="table-responsive-md text-nowrap">
                        <table class="table table-bordered table-striped table-sm table-items">
                            <thead>
                                <tr>
                                    <th>INVOICE ID</th>
                                    <th>PATIENT</th>
                                    <th>PHYSICIAN</th>
                                    <th>INVOICE DATE</th>
                                    <th>TOTAL</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Invoices.Any())
                                {
                                    @foreach (var item in Model.Invoices)
                                    {
                                        <tr>
                                            <td>
                                                <a href="/Invoice/InvoiceDetail?InvoiceId=@item.InvoiceId">@Html.DisplayFor(modelItem => item.InvoiceId) </a>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.DoctorName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.InvoiceDate)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Total)</td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                    @if (Model.Pager.Pages.Any())
                    {
                        <nav class="table-responsive">
                            <ul class="pagination justify-content-center d-flex flex-wrap">
                                @if (Model.Pager.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/Invoice?page=1">First</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="/Invoice?page=@(Model.Pager.CurrentPage - 1)">Previous</a>
                                    </li>
                                }

                                @foreach (var p in Model.Pager.Pages)
                                {
                                    <li class="page-item @(p == Model.Pager.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="/Invoice?page=@p">@p</a>
                                    </li>
                                }

                                @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/Invoice?page=@(Model.Pager.CurrentPage + 1)">Next</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="/Invoice?page=@(Model.Pager.TotalPages)">Last</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
    <!--/.row-->
    <!-- pager -->
  
</div>

