@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}


<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card-group">
            <div class="card p-4">
                <h2>@ViewData["Title"]</h2>
                <p>
                    Please check your email to reset your password.
                </p>
            </div>
        </div>
    </div>
</div>